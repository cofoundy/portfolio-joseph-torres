---
import { siteConfig } from "../config";
---

<div
  id="hero"
  class="relative isolate overflow-hidden bg-white py-16 md:py-0 md:h-screen"
  style={`--accent-color: ${siteConfig.accentColor}`}
>
  <!-- Gradient overlay -->
  <div
    class="absolute inset-0 -z-10"
    style={`background: radial-gradient(ellipse 800px 1200px at 0% 0%, ${siteConfig.accentColor}40 0%, ${siteConfig.accentColor}25 20%, ${siteConfig.accentColor}10 40%, rgba(255, 255, 255, 0.3) 70%, rgba(255, 255, 255, 0.8) 90%, white 100%)`}
  >
  </div>
  <svg
    aria-hidden="true"
    class="absolute inset-0 -z-10 size-full stroke-gray-200 [mask-image:radial-gradient(100%_100%_at_top_right,white,transparent)]"
  >
    <defs>
      <pattern
        x="50%"
        y={-1}
        id="grid-pattern"
        width={200}
        height={200}
        patternUnits="userSpaceOnUse"
      >
        <path d="M.5 200V.5H200" fill="none"></path>
      </pattern>
      <pattern
        id="quality-symbols"
        x="0"
        y="0"
        width="400"
        height="400"
        patternUnits="userSpaceOnUse"
      >
        <text x="50" y="50" fill={siteConfig.accentColor} font-family="'Libre Baskerville', serif" font-size="18" transform="rotate(-15)">ISO</text>
        <text x="150" y="100" fill={siteConfig.accentColor} font-family="'Libre Baskerville', serif" font-size="16" transform="rotate(10)">HACCP</text>
        <text x="280" y="80" fill={siteConfig.accentColor} font-family="'Libre Baskerville', serif" font-size="14" transform="rotate(-5)">BRC</text>
        <text x="100" y="200" fill={siteConfig.accentColor} font-family="'Libre Baskerville', serif" font-size="18" transform="rotate(15)">SQF</text>
        <text x="300" y="180" fill={siteConfig.accentColor} font-family="'Libre Baskerville', serif" font-size="16" transform="rotate(-10)">GMP</text>
        <text x="200" y="260" fill={siteConfig.accentColor} font-family="'Libre Baskerville', serif" font-size="20" transform="rotate(5)">✓</text>
        <text x="50" y="320" fill={siteConfig.accentColor} font-family="'Libre Baskerville', serif" font-size="14" transform="rotate(-8)">IFS</text>
        <text x="350" y="300" fill={siteConfig.accentColor} font-family="'Libre Baskerville', serif" font-size="16" transform="rotate(12)">FSSC</text>
        <text x="150" y="360" fill={siteConfig.accentColor} font-family="'Libre Baskerville', serif" font-size="18" transform="rotate(-12)">QA</text>
      </pattern>
    </defs>
    <rect fill="url(#quality-symbols)" width="100%" height="100%" opacity="0.15"></rect>
    <rect fill="url(#grid-pattern)" width="100%" height="100%" stroke-width={0}></rect>
  </svg>

  <div class="h-full mx-auto p-8 sm:p-12 md:p-24 flex items-center">
    <div class="flex flex-col md:flex-row items-center gap-8 md:gap-16 w-full">
      <!-- Photo -->
      <div class="flex-shrink-0 animate-fade-in">
        <div class="w-40 h-40 md:w-52 md:h-52 rounded-full overflow-hidden border-4 shadow-lg" style={`border-color: ${siteConfig.accentColor}30`}>
          <img
            src={`${import.meta.env.BASE_URL}/profile.jpg`}
            alt={siteConfig.name}
            class="w-full h-full object-cover"
          />
        </div>
      </div>

      <!-- Text -->
      <div>
        <h2
          class="text-pretty text-lg sm:text-xl md:text-2xl font-medium text-gray-500 animate-fade-in"
        >
          ¡Hola! Soy
        </h2>
        <h1
          class="mt-2 sm:mt-3 text-pretty text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight text-gray-800 animate-fade-in animation-delay-200"
        >
          <span style={{ color: siteConfig.accentColor }}>{siteConfig.name}</span>
        </h1>
        <p
          class="mt-3 sm:mt-4 text-pretty text-base sm:text-lg md:text-xl font-medium text-gray-600 animate-fade-in animation-delay-400"
        >
          {siteConfig.title}
        </p>

        <!-- Social icons -->
        <div class="mt-6 flex gap-x-4 sm:gap-x-6 text-gray-600 animate-fade-in animation-delay-600">
          {siteConfig.social?.email && (
            <a
              href={`mailto:${siteConfig.social.email}`}
              aria-label="Email"
              class="transition-colors duration-300 hover:text-[var(--accent-color)]"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6 sm:h-7 sm:w-7">
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" />
                <path d="M3 7l9 6l9 -6" />
              </svg>
            </a>
          )}
          {siteConfig.social?.linkedin && (
            <a
              href={siteConfig.social.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              aria-label="LinkedIn"
              class="transition-colors duration-300 hover:text-[var(--accent-color)]"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6 sm:h-7 sm:w-7">
                <path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M8 11v5" /><path d="M8 8v.01" /><path d="M12 16v-5" /><path d="M16 16v-3a2 2 0 1 0 -4 0" /><path d="M3 7a4 4 0 0 1 4 -4h10a4 4 0 0 1 4 4v10a4 4 0 0 1 -4 4h-10a4 4 0 0 1 -4 -4z" />
              </svg>
            </a>
          )}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-in { animation: fadeIn 0.8s ease-out forwards; opacity: 0; }
  .animation-delay-200 { animation-delay: 0.2s; }
  .animation-delay-400 { animation-delay: 0.4s; }
  .animation-delay-600 { animation-delay: 0.6s; }
</style>
